<div class='description'>
	<h1>Edit:</h1>
		<p>
			To edit your password, enter a new password and confirm. For any other updates, enter your normal password.
		</p>
	
	<%= form_tag "/#{@user.slug}", method: :patch do %>
		<p>
			<%= label_tag(:username, "username:") %>
				<br>
			<%= text_field_tag(:username, @user.username) %>
				<br>
				<br>
			<%= label_tag(:email, "email:") %>
				<br>
			<%= text_field_tag(:email, @user.email) %>
				<br>
				<br>
			<%= label_tag(:password, "password:") %>
				<br>
			<%= password_field_tag(:password, @user.password) %>
				<br>
				<br>
			<%= label_tag(:password_confirmation, "password confirmation:") %>
				<br>
			<%= password_field_tag(:password_confirmation, @user.password_confirmation) %>
				<br>
				<br>
			<%= submit_tag("Update") %>
		</p>
	<% end %>
</div>