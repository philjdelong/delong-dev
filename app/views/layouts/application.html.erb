<!DOCTYPE html>
<html>
  <head>
    <title>Phil DeLong: Backend Developer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/pure-min.css" integrity="sha384-oAOxQR6DkCoMliIh8yFnu25d7Eq/PHS21PClpwjOTeU2jRSq11vu66rf90/cZr47" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <nav>
      <div id="loginSidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeLogin()">&times;</a>
        <div align='center'>
          <%= image_tag("profile_pic_crop.png", alt: "Profile Image") %>
        </div>
          <br>
        <footer>
          <% if current_user %>
            <p align='center'><%= "Welcome, #{current_user.username}!" %></p>
            <%= link_to "Dashboard", "/#{current_user.slug}/profile"%>
            <%= link_to "Log out", "/logout"%>
              <br>
              <br>
          <% else %>
            <%= link_to "login", "/login"%>
            <%= link_to "register", "/users/register"%>
          <% end %>
        <footer>
      </div>
      
      <div id="menuSidenav" class="menu-sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeMenu()">&times;</a>
          <div align='center'>
            <%= image_tag("profile_pic_crop.png", alt: "Profile Image") %>
          </div>
            <br>
          <%= link_to "About", "/"%>
          <%= link_to "Projects", "/projects"%>
          <%= link_to "Resume", "/resume"%>
        </div>
      </div>

      <% if current_user %>
        <div style="font-size:20px;cursor:pointer" onclick="openLogin()">&#9776; dashboard</div>
      <% else %>
        <div style="font-size:20px;cursor:pointer" onclick="openLogin()">&#9776; login/register</div>
      <% end %>
      <div style="font-size:20px;cursor:pointer" onclick="openMenu()">&#9776; menu</div>
      <div align='center' id='flash'>
        <% flash.each do |type, msg| %>
          <%= msg %>
        <% end %>
      </div>
      <h1 align='center'>Phil DeLong</h1>

      <script>
        function openMenu() {
          document.getElementById("menuSidenav").style.width = "180px";
        }

        function closeMenu() {
          document.getElementById("menuSidenav").style.width = "0";
        }
      </script>
      <script>
        function openLogin() {
          document.getElementById("loginSidenav").style.width = "180px";
        }

        function closeLogin() {
          document.getElementById("loginSidenav").style.width = "0";
        }
      </script>
        <br>
    </nav>
    <%= yield %>
  </body>
</html>
